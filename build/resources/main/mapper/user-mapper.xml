<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weather.user.UserMapper">
    <resultMap id="UserResult" type="com.weather.user.domain.User">
        <result property="userId" column="user_id"></result>
        <result property="loginId" column="login_id"></result>
        <result property="password" column="password"></result>
        <result property="userName" column="user_name"></result>
        <result property="email" column="email"></result>
        <result property="phoneNumber" column="phone_number"></result>
        <result property="createdDate" column="created_date"></result>
    </resultMap>

    <select id="getUserList" resultMap="UserResult">
        SELECT *
        FROM user
    </select>

    <insert id="insertUser" parameterType="com.weather.user.domain.User">
        INSERT INTO user (login_id, password, user_name, email, phone_number, created_date)
        VALUES (#{loginId}, #{password}, #{userName}, #{email}, #{phoneNumber}, DATE_FORMAT(NOW(), '%Y%m%d%H%i%s'));
    </insert>
</mapper>